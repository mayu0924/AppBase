<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.appheader.ui_demo.mine.Circlebar
        android:id="@+id/progress"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:circle_bar_width="28px"
        app:circle_bg_width="28px"
        app:circle_duration="1000"
        app:color_bar="@color/green_500"
        app:color_bg="@color/circlebar_gray"
        app:color_text="#088401"
        app:max_value="100"
        app:value="73" />


    <com.appheader.ui_demo.mine.Circlebar
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@id/progress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:circle_bar_width="38px"
        app:circle_bg_width="38px"
        app:circle_duration="1000"
        app:color_bar="@color/path_purple"
        app:color_bg="@color/circlebar_gray"
        app:color_text="#31137c"
        app:max_value="100"
        app:value="73" />

</RelativeLayout>